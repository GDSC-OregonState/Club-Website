---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import officers from '../data/officers.json';
---

<Layout title="Officers">
  <div class="bg-gradient-to-br from-google-blue-500 to-blue-700 text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center">Meet Our Team</h1>
    </div>
  </div>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {officers.map((officer) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="relative officer-card">
              <Image
                src={officer.image} 
                alt={officer.name} 
                width={300} 
                height={300} 
                class="w-full h-auto object-cover"
              />
              <img
                src=""
                alt="Photo frame"
                class="absolute top-0 left-0 w-full h-full photo-frame"
              />
            </div>
            <div class="p-6">
              <h2 class="text-xl font-bold mb-1">{officer.name}</h2>
              <p class="text-google-blue-500 font-medium mb-2">{officer.position}</p>
              <p class="text-gray-600 mb-4 text-sm">{officer.description}</p>
              <a 
              href={officer.linkedin} 
              class="text-google-blue-500 hover:text-blue-700 text-sm flex items-center"
              target="_blank" 
              rel="noopener noreferrer"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M22.23 0H1.77C.8 0 0 .8 0 1.77v20.46C0 23.2.8 24 1.77 24h20.46c.97 0 1.77-.8 1.77-1.77V1.77C24 .8 23.2 0 22.23 0zM7.19 20.45H3.56V9h3.63v11.45zM5.38 7.58c-1.16 0-2.1-.94-2.1-2.1 0-1.16.94-2.1 2.1-2.1 1.16 0 2.1.94 2.1 2.1 0 1.16-.94 2.1-2.1 2.1zM20.45 20.45h-3.63v-5.63c0-1.34-.02-3.06-1.86-3.06-1.87 0-2.16 1.46-2.16 2.96v5.73H9.18V9h3.48v1.56h.05c.49-.93 1.7-1.92 3.5-1.92 3.74 0 4.43 2.46 4.43 5.65v6.16z"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const photoFrames = [
      '/photo_frames/GDG-Campus-Social-PhotoFrame-Blue.png',
      '/photo_frames/GDG-Campus-Social-PhotoFrame-Green.png',
      '/photo_frames/GDG-Campus-Social-PhotoFrame-Red.png',
      '/photo_frames/GDG-Campus-Social-PhotoFrame-Yellow.png',
    ];

    const officerCards = document.querySelectorAll('.officer-card');
    officerCards.forEach(card => {
      const frame = card.querySelector('.photo-frame') as HTMLImageElement;
      if (frame) {
        const randomFrame = photoFrames[Math.floor(Math.random() * photoFrames.length)];
        frame.src = randomFrame;
      }
    });
  });
</script>
