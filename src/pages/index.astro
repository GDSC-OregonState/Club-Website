---
import "../styles/globals.css";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
// import ParticlesBackground from "@/components/ParticlesBackground.tsx";
import { Button } from "../components/ui/button.tsx";
---

<Layout title="Home">
  <section class="bg-gradient-to-br py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-7xl font-bold mb-6 text-neutral-700">
          Welcome to <a class="text-gred">Google </a>
          <a class="text-gblue">Developer</a>
          <a class="text-ggreen">Group</a> on <a class="text-gyellow">Campus</a>
          @ Oregon State
          <!-- <a class="text-black">Oregon</a>
          <a class="text-borange">State</a> -->
        </h1>

        <p class="text-xl mb-8 text-neutral-700">
          Oregon State University's hub for tech enthusiasts and future
          innovators
        </p>
        <div class="flex justify-center space-x-4">
          <a
            href="https://discord.gg/m2ZwBCabCq"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#5865F2] hover:bg-[#4752C4] text-white px-6 py-3 rounded-full transition-colors flex items-center space-x-2"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"
              ></path>
            </svg>
            <span>Join Our Discord</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">What We Do</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 text-center">
          <div
            class="w-16 h-16 bg-[--google-blue] rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Workshops</h3>
          <p class="text-gray-600">
            Learn from industry experts and peers through hands-on coding
            sessions
          </p>
        </div>
        <div class="p-6 text-center">
          <div
            class="w-16 h-16 bg-[--google-red] rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"
              ></polygon>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Hackathons</h3>
          <p class="text-gray-600">
            Participate in exciting coding competitions and build amazing
            projects
          </p>
        </div>
        <div class="p-6 text-center">
          <div
            class="w-16 h-16 bg-[--google-green] rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Networking</h3>
          <p class="text-gray-600">
            Connect with fellow developers and build your professional network
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Upcoming Events</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <Image
            src="/placeholder.svg"
            alt="Android Workshop"
            width={400}
            height={200}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Android Development Workshop</h3>
            <p class="text-gray-600 mb-4">
              Learn the basics of Android app development with Kotlin
            </p>
            <div class="flex items-center text-sm text-gray-500">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 mr-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <span>Coming Soon</span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <Image
            src="/placeholder.svg"
            alt="Web Development"
            width={400}
            height={200}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Web Development Series</h3>
            <p class="text-gray-600 mb-4">
              Build modern web applications with React and Next.js
            </p>
            <div class="flex items-center text-sm text-gray-500">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 mr-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <span>Coming Soon</span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <Image
            src="/placeholder.svg"
            alt="Cloud Workshop"
            width={400}
            height={200}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Cloud Computing Workshop</h3>
            <p class="text-gray-600 mb-4">
              Get started with Google Cloud Platform
            </p>
            <div class="flex items-center text-sm text-gray-500">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 mr-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <span>Coming Soon</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
